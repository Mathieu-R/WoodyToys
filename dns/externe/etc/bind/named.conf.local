# /etc/bind/named.conf.local

zone "wt4.ephec-ti.be" IN {

        # Zone de type maître
        type master;

        # Fichier de zone
        file "/etc/bind/wt4.ephec-ti.be/db.wt4.ephec-ti.be";

        # On autorise tout l'intranet à envoyer des requêtes vers cette zone
        allow-query { 172.17.0.0; };

};

zone "134.119.80.151.in-addr.arpa" {

	type master;
	file "/etc/bind/wt4.ephec-ti.be/db.157.119.81.151.in-addr.arpa";
	# allow-transfer { 151.80.119.157; };
	notify no;

};
